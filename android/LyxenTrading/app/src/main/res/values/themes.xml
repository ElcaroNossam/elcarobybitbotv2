<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Theme.LyxenTrading" parent="android:Theme.Material.NoActionBar">
        <item name="android:statusBarColor">@color/dark_background</item>
        <item name="android:navigationBarColor">@color/dark_background</item>
        <item name="android:windowBackground">@color/dark_background</item>
    </style>
    
    <!-- Splash screen theme -->
    <style name="Theme.LyxenTrading.Splash" parent="Theme.LyxenTrading">
        <item name="android:windowSplashScreenBackground" tools:targetApi="s">@color/dark_background</item>
        <item name="android:windowSplashScreenAnimatedIcon" tools:targetApi="s">@mipmap/ic_launcher</item>
    </style>
</resources>
