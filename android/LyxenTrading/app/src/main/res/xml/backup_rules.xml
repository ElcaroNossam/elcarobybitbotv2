<?xml version="1.0" encoding="utf-8"?>
<!--
    Android Backup Rules for Lyxen Trading App
    
    SECURITY: Exclude ALL sensitive data from backup to prevent:
    - ADB backup extraction attacks
    - Cloud backup data leaks
    - Token/credential exposure
-->
<full-backup-content>
    <!-- Exclude all shared preferences by default -->
    <exclude domain="sharedpref" path="."/>
    
    <!-- Exclude DataStore preferences -->
    <exclude domain="file" path="datastore/"/>
    
    <!-- Exclude database -->
    <exclude domain="database" path="."/>
</full-backup-content>
