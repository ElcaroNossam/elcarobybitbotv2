<?xml version="1.0" encoding="utf-8"?>
<!--
    Network Security Configuration for Enliko Trading App
    
    SECURITY FEATURES:
    1. Certificate Pinning - Prevents MITM attacks
    2. Cleartext traffic disabled - All HTTP blocked
    3. TLS 1.2+ required
    
    NOTE: Update pin hashes when server certificates are rotated!
    Current pins are SHA-256 of the server's public key.
    
    To generate pin:
    echo | openssl s_client -servername named-supplement-pending-cooking.trycloudflare.com -connect named-supplement-pending-cooking.trycloudflare.com:443 2>/dev/null | openssl x509 -pubkey -noout | openssl pkey -pubin -outform der | openssl dgst -sha256 -binary | openssl enc -base64
-->
<network-security-config>
    
    <!-- Base config: no cleartext allowed -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>
    
    <!-- Debug config: allow cleartext for local development -->
    <debug-overrides>
        <trust-anchors>
            <certificates src="user" />
        </trust-anchors>
    </debug-overrides>
    
    <!-- Production domain: Cloudflare Tunnel -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">trycloudflare.com</domain>
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
        <!-- 
            Certificate pinning for production
            These are Cloudflare's intermediate certificate pins
            Pin 1: Cloudflare Inc ECC CA-3
            Pin 2: DigiCert TLS RSA SHA256 2020 CA1 (backup)
        -->
        <pin-set expiration="2027-01-01">
            <!-- Cloudflare Inc ECC CA-3 -->
            <pin digest="SHA-256">Vjs8r4z+80wjNcr1YKepWQboSIRi63WsWXhIMN+eWys=</pin>
            <!-- DigiCert backup pin -->
            <pin digest="SHA-256">RRM1dGqnDFsCJXBTHky16vi1obOlCgFFn/yOhI/y+ho=</pin>
        </pin-set>
    </domain-config>
    
    <!-- Allow cleartext only for localhost in debug (Android emulator) -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="false">10.0.2.2</domain>
        <domain includeSubdomains="false">localhost</domain>
        <domain includeSubdomains="false">127.0.0.1</domain>
    </domain-config>
    
</network-security-config>
